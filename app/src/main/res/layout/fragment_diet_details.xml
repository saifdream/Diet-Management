<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.saif_dream.dietpart.fragment.DietDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="Diet Details"
        android:textSize="@dimen/headerSize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Type"
            android:textSize="@dimen/titleSize"
            android:layout_weight=".2"/>

        <TextView
            android:id="@+id/dietType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Type"
            android:textSize="@dimen/titleSize"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="Menu"
            android:textSize="@dimen/titleSize"/>
        <TextView
            android:id="@+id/dietMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:inputType="text"
            android:hint="Give Diet Menu"
            android:textSize="@dimen/titleSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="Date"
            android:textSize="@dimen/titleSize"/>
        <TextView
            android:id="@+id/dietDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".60"
            android:hint="Pick Diet Date"
            android:textSize="@dimen/titleSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="Time"
            android:textSize="@dimen/titleSize"/>
        <TextView
            android:id="@+id/dietTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".60"
            android:hint="Pick Diet Time"
            android:textSize="@dimen/titleSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/dailyAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Alarm"
            android:textSize="@dimen/titleSize"
            android:layout_marginLeft="40dp"/>

        <CheckBox
            android:id="@+id/reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder"
            android:textSize="@dimen/titleSize"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/myFABList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_dialer"
            app:fabSize="normal"
            app:backgroundTint="#214dac"
            android:clickable="true"
            app:layout_anchorGravity="bottom|right|end"
            app:rippleColor="#0a92e1"
            app:elevation="4dp"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/myFABEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            app:fabSize="normal"
            app:backgroundTint="#214dac"
            android:clickable="true"
            app:layout_anchorGravity="bottom|right|end"
            app:rippleColor="#0a92e1"
            app:elevation="4dp"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>
